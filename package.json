{
  "name": "Parrrot",
  "version": "1.0.2",
  "description": "A cross-platform software way to use a parrot on amateur radio rigs that do not have one built in",
  "main": "main.js",
  "author": "Stefan DB4SCW dev@db4scw.de",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac --universal --arm64",
    "dist:linux": "electron-builder --linux deb rpm tar.gz --arm64 --x64 --armv7l"
  },
  "build": {
    "appId": "de.db4scw.parrrot.app",
    "productName": "Parrrot",
    "directories": {
      "buildResources": "assets"
    },
    "asar": true,
    "compression": "maximum",
    "files": [
      "**/*",
      "!**/*.map",
      "!**/tests{,/**}",
      "!**/examples{,/**}",
      "!**/.local-chromium{,/**}"
    ],
    "extraFiles": [
      {
        "from": "assets/start.sh",
        "to": "start.sh"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64",
            "universal"
          ]
        }
      ],
      "icon": "parrrot_icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "parrrot_icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/parrrot_icon_512.png",
      "category": "Utility",
      "maintainer": "DB4SCW Stefan",
      "desktop": "assets/parrrot.desktop"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "semver": "^7.7.2"
  }
}
