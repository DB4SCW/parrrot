{
  "name": "Parrrot",
  "version": "1.0.0",
  "description": "A cross-platform software way to use a parrot on amateur radio rigs that do not have one built in",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac-universal": "electron-builder --mac --universal",
    "dist:allsilicon": "electron-builder --mac --arm64 --universal --linux deb rpm tar.gz --arm64 --x64 --armv7l"
  },
  "build": {
    "appId": "de.db4scw.parrrot.app",
    "productName": "Parrrot",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "**/*"
    ],
    "extraFiles": [
      {
        "from": "assets/start.sh",
        "to": "start.sh"
      }
    ],
    "mac": {
      "target": ["dmg"],
      "icon": "parrrot_icon.icns"
    },
    "win": {
      "target": ["nsis",
                  "msi"],
      "icon": "parrrot_icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "armv7l", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "armv7l", "arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/parrrot_icon_512.png",
      "category": "Utility",
      "maintainer": "DB4SCW Stefan",
      "desktop": "assets/parrrot.desktop"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "axios": "^1.6.8"
  }
}
